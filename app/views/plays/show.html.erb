<div class="row">
    <div class="col-md-4">
      <% if @play.image.blank?%>
      <p>No image available</p>
      <% else %>
      <div class="border border-secondary"><%= image_tag(@play.image, options = {width:"100%", height: "480px"}) %></div>
      <% end %>
    </div>
    <div class="col-md-8">
      <p><strong>Title: </strong></p>
      <p><%= @play.title %></p>
      <p><strong>Description: </strong></p>
      <p><%= @play.description %></p>
      <p><strong>Director: </strong></p>
      <p><%= @play.director %></p>
      <p><strong>Category: </strong></p>
      <p><%= @play.category.name %></p>
      
      <p><strong>Average Rating: </strong></p>
      <div class="avg-star-container">
        <span class="fa-stack fa-2x">
          <i class="fas fa-star fa-stack-2x text-warning"></i>
            <span class="fa-stack-1x text-light">
              <span style="font-size:20px; font-weight: 600; display:block;">
                  <%= @avg_rating %>
              </span>
            </span>
        </span>
      </div>
    </div>
</div>
<div class="row">
  <div class="col-md-12 mt-2">  
    <div class="btn-group">
      <%= link_to "Back to index", plays_path, class:"mr-3" %>
      <% if user_signed_in? %>
        <% if @play.user_id == current_user.id %>
          <%= link_to "Edit", edit_play_path(@play), class:"mr-3" %>
          <%= link_to "Delete", play_path(@play), method: :delete, data:{confirm:"Are you Shure?"} %>
        <% end %>
      <% end %>
    </div>
  <!--col-md-12-->
  </div>
  <div class="col-md-12">
    <%= link_to "Add reviews", new_play_review_path(@play), class:"btn btn-secondary my-3" %>
    <h3>Reviews</h3>
      <%= render @play.reviews %>
  </div>
<!--row-->
</div>